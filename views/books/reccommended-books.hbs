<head>
  <link rel="stylesheet" href="/stylesheets/user-books.css" />
</head>

<h1>Reccommended books</h1>

{{#if user.reccommended}}
  <section class="user-books">

    <div class="user-books-center">
      {{#each user.reccommended}}
        <div class="user-book-info">
          <img src="{{this.book.imageUrl}}" alt="book-cover" />
          <h4>{{this.book.title}}</h4>
          {{#if this.book.averageRating}}
            <h5>Average rating of {{this.book.averageRating}}</h5>
          {{/if}}

          <h5>Reccommended by: {{this.reccommendedBy.username}}</h5>

          <div class="user-books-buttons">
            <a class="a-button" href="/search/book-details/{{id}}">Book Details</a>
            <a
              class="a-button"
              href="/read-books/add-favorite-book/{{book.id}}"
            >Add to favorites</a>
            <a
              class="a-button"
              href="/future-books/{{_id}}/reccommend"
            >Reccomend Book</a>
            <a class="a-button" href="/read-books/{{_id}}/remove">Remove Book</a>
          </div>
        </div>
      {{/each}}
    </div>
  </section>

{{else}}
  <section class="no-readings">
    <h5>No reccommendations at the moment...
      <br />Reccommend your favorites to a friend!</h5>

    <div class="sad-booklover">
      <img src="/images/book_04.png" alt="sad-booklover" />
    </div>
    <a class="button" href="/read-books/favorites">My Favorite Books</a>
  </section>
{{/if}}