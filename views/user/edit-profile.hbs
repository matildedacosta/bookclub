<head>
  <link rel="stylesheet" href="/stylesheets/edit-profile.css" />
</head>

<h1>Edit Profile</h1>
<section class="edit-profile">
  <div class="profile-info">
    <form
      class="edit-profile-form"
      action="/{{currentUser._id}}/edit"
      method="post"
      enctype="multipart/form-data"
    >
      <label for="imageUrl">Image</label>
      <div class="img-input">
        <input class="img-input" type="file" name="imageUrl" id="imageUrl" />
      </div>
      <label>
        Name:
        <input type="text" name="name" value=" {{currentUser.name}}" />
      </label>
      <label>
        Username:
        <input type="text" name="username" value=" {{currentUser.username}}" />
      </label>
      <label>
        Email
        <input type="email" name="email" value=" {{currentUser.email}}" />
      </label>
      <label>
        Password
        <input
          type="password"
          name="password"
          value=" {{currentUser.passwordHash}}"
        />
      </label>
      {{! <div class="description"> }}
      <label>
        Description:
        <textarea
          type="text"
          name="description"
          value=" {{currentUser.description}}"
        ></textarea>
      </label>
      {{! </div> }}

      <button class="button edit-profile-btn" type="submit">Update</button>
    </form>

  </div>
</section>

{{#if errorMessage}}
  {{errorMessage}}
{{/if}}